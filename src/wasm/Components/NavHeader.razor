@inject JsService jsService

<div>
    <nav class="fixed-top navbar-light bg-light">
        @*<div class="container-fluid">
            <div class="navbar-brand" @onclick="GoBack"><i class="bi bi-chevron-left"></i></div>

            <div>@Title</div>

            <div class="d-flex" @onclick="OnOperate">
                @Operation
            </div>
        </div>*@

        <div class="row text-center">
            <div class="col-2 left" @onclick="GoBack"><i class="bi bi-chevron-left"></i></div>

            <div class="col-7 title">@Title</div>

            <div class="col-3 operation" @onclick="OnOperate">
                @Operation
            </div>
        </div>
    </nav>
    <div style="margin-top: 56px;"></div>
</div>

@code {
    [Parameter]
    public string Title { get; set; } = string.Empty;

    [Parameter]
    public string Operation { get; set; } = string.Empty;

    [Parameter]
    public Func<Task>? Operate { get; set; }

    private async Task GoBack()
    {
        await jsService.GoBack();
    }

    private async Task OnOperate()
    {
        if (Operate != null)
        {
            await Operate();
        }
    }
}
