<a class="list-group-item d-flex justify-content-between align-items-center" href="@Href">
    <p class="text-break link-list-item-title">@Title</p>
    @if (string.IsNullOrWhiteSpace(Tip))
    {
        <i class="bi bi-chevron-right"></i>
    }
    else
    {
        <span class="@($"badge bg-{TipBackground} rounded-pill")">@Tip</span>
    }
</a>

@code {
    [Parameter]
    public string Title { get; set; } = string.Empty;

    [Parameter]
    public string Tip { get; set; } = string.Empty;

    [Parameter]
    public string TipBackground { get; set; } = "primary";

    [Parameter]
    public string Href { get; set; } = string.Empty;
}
