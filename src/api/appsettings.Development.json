{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "MySql": {
    "ConnectionString": "Server=localhost;Port=3306;Database=resader;User Id=root;"
  },
  "Redis": { // 若不配置 redis 则会使用内存作为缓存策略，该模式下仅支持启动一个服务实例
    "ConnectionString": "localhost",
    "DefaultDb": 0
  },
  "Serilog": {
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] [{TraceId}] {Message:lj}{NewLine}{Exception}"
        }
      }, {
        "Name": "File",
        "Args": {
          "path": "log/log.txt", 
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] [{TraceId}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
