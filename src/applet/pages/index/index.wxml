<!--index.wxml-->
<van-notify id="van-notify" />
<view class="container">
  <view class="logo">
    <image src="../../logo.png" style="height: 130px; width: 130px;"></image>
  </view>
</view>
<van-cell-group wx:for="{{feeds}}">
  <van-cell is-link url="{{'/pages/articles/articles?feed=' + item.id}}" use-label-slot>
    <view slot="title">
      <view class="van-cell-text">{{item.title}}</view>
      <van-tag wx:if="{{item.active}}" type="danger">new</van-tag>
    </view>
  </van-cell>
</van-cell-group>
